

<style>
body {

  background-color: green;
  padding: 10px;
  background: white;
 
}
.header {
  padding: 30px;
  text-align: center;
  background: yellow;
}

.header h1 {
  font-size: 50px;
}

/* Style the top navigation bar */
.topnav {
  overflow: hidden;
  background-color: #333;
}

/* Style the topnav links */
.topnav a {
  float: left;
  display: block;
  color: white;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

/* Change color on hover */
.topnav a:hover {
  background-color: green;
  color: black;
}
/* Style for avatars */
.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}

/* Default style for avatars without an image */
.default-avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  background-color: lightgray;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10px;
}
.post {
  display: flex;
  flex-wrap: wrap;
  padding: 10px;
  align-items: center;
  margin-bottom: 20px;
}




</style>

<div class="header">
  <h1>Create Your Own Beautiful Blog</h1>
  <p>Here you can see others blog and also you can add your blogs</p>
  <h1>
  <%= link_to ' Create Your Blog', new_post_path %>
  </h1>
</div>

<div class="topnav">
  <a href="#">Home</a>
  <a href="#">About</a>
  <a href="#">contact</a>
  <a href="#" style="float:right">
  <%= button_to 'Logout', destroy_user_session_path, method: :delete, form: {turbolink: false} %>
  </a>
</div>


<ul>
  <% @posts.each do |post| %>
    <li>
      <div class="post">
        
        <% if post.user.avatar.present? %>
          <%= image_tag post.user.avatar, class: "avatar" %>
        <% else %>
          <div class="default-avatar"><img src="https://tse1.mm.bing.net/th?id=OIP.UDoPY83CNyZbtLbzSRDVxQHaHa&pid=Api&P=0&h=180" alt="default-avatar" class="default-avatar"></div>
        <% end %>
        <b>
        <p><%= post.user.id %> - <%= post.user.email %></p>
        </b>
        
      </div>    
      <h2><%= link_to post.title, post_path(post) %></h2>
      <p>Posted on: <%= post.created_at.strftime("%B %e, %Y at %l:%M %p") %></p>
      <p><%= truncate(post.content, length: 500) %></p>
      <%= form_for(post, :html => { :method => :delete, :remote => true, data: { confirm: "Are you sure?"} }) do |f| %>
      <%= f.submit :value => "Delete" %>
      <% end %>
      
      
      
      <% if post.image.present? %>
        <%= image_tag post.image.url ,width: "30%" %>
      <% end %>

      <% if post.video.present? %>
        <video controls>
          <source src="/videos/<%= post.video %>" type="video/mp4">
          Your browser does not support the video tag.
        </video>
      <% end %>
      
      
      <p><%= link_to 'Read more', post_path(post) %></p>
    </li>
  <% end %>
</ul>


